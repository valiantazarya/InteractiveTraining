<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.thepoweroftether.interactivetraining.LoginActivity">

    <ImageView
        android:src="@drawable/login_gute"
        android:layout_width="match_parent"
        android:layout_height="286px"/>

    <android.support.design.widget.TextInputLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/username_edit"
            android:inputType="text"
            android:layout_marginTop="50px"
            android:layout_width="512px"
            android:layout_height="wrap_content"
            android:hint="Username"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="512px"
            android:drawableTint="@color/colorLightPrimary"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password" />
    </android.support.design.widget.TextInputLayout>

    <TableRow
        android:gravity="center"
        android:layout_marginTop="25px">
        <Button
            android:id="@+id/login_button"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/login_setting_button"/>

    </TableRow>

    <TextView
        android:id="@+id/register_button"
        android:text="Doesn't have account? Register Here"
        android:textStyle="italic|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="50px"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</TableLayout>