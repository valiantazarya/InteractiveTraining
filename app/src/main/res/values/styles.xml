<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:editTextColor">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:positiveButtonText">@color/colorText</item>
        <item name="android:negativeButtonText">@color/colorText</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <!-- Login Theme -->
    <style name="LoginTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:editTextColor">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:positiveButtonText">@color/colorText</item>
        <item name="android:negativeButtonText">@color/colorText</item>
    </style>

    <!-- Register Theme -->
    <style name="RegisterTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:editTextColor">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:positiveButtonText">@color/colorText</item>
        <item name="android:negativeButtonText">@color/colorText</item>
    </style>

    <style name="ActionBarCustom" parent="@style/Theme.AppCompat.Light">
        <item name="icon">@drawable/icon</item>
    </style>

    <!-- RATING START -->
    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>
</resources>
